<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.denis.orderandtracksimply.Login"
    android:clickable="true"
    android:background="#EFF5F7">

    <com.digits.sdk.android.DigitsAuthButton
        android:id="@+id/auth_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите e-mail"
        android:id="@+id/enter_email"
        android:layout_marginTop="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="17dp"/>

    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:layout_below="@+id/enter_email"
        android:layout_centerHorizontal="true"
        android:textSize="17dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Запомнить"
        android:id="@+id/remember"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:textSize="17dp"
        android:checked="true"
        android:layout_marginTop="5dp"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remember"
        android:layout_centerHorizontal="true"
        android:id="@+id/frameLayout"
        android:layout_marginTop="10dp">

        <ImageButton
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:text="Авторизоваться через e-mail"
            android:id="@+id/using_email"
            android:layout_below="@+id/remember"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button"
            style="@style/TextAppearance.AppCompat"
            android:allowUndo="false"
            android:enabled="true"
            android:theme="@style/Base.Theme.AppCompat"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Авторизоваться"
            android:id="@+id/email_text"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="@color/abc_primary_text_disable_only_material_dark"/>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="___________________________________________"
        android:id="@+id/textView2"
        android:layout_below="@+id/frameLayout"
        android:layout_alignEnd="@+id/frameLayout"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginTop="10dp">

        <ImageButton
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:text="Авторизоваться по телефону"
            android:id="@+id/using_phone"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button"
            style="@style/TextAppearance.AppCompat"
            android:allowUndo="false"
            android:enabled="true"
            android:theme="@style/Base.Theme.AppCompat"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="Авторизоваться через телефон"
            android:id="@+id/phone_text"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="@color/abc_primary_text_disable_only_material_dark"/>
    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/artekom"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"/>

</RelativeLayout>
