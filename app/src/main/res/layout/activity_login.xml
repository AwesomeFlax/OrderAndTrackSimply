<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.denis.orderandtracksimply.Login"
    android:clickable="true"
    >

    <com.digits.sdk.android.DigitsAuthButton
        android:id="@+id/auth_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите e-mail"
        android:id="@+id/enter_email"
        android:layout_marginTop="240dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="17sp"
        android:textColor="@color/abc_secondary_text_material_light"/>

    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:layout_below="@+id/enter_email"
        android:layout_centerHorizontal="true"
        android:textSize="17sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Запомнить"
        android:id="@+id/remember"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:textSize="17sp"
        android:checked="false"
        android:layout_marginTop="8dp"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textColorLink="@color/deep_blue"
        android:theme="@style/BrandedCheckBox"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remember"
        android:layout_centerHorizontal="true"
        android:id="@+id/frameLayout"
        android:layout_marginTop="10dp">

        <Button
            android:text="АВТОРИЗОВАТЬСЯ"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:id="@+id/using_email"
            android:background="@color/deep_blue"
            android:textColor="@color/dgts__text_light"/>

    </FrameLayout>

    <ImageView
        android:layout_width="210dp"
        android:layout_height="135dp"
        android:id="@+id/imageView"
        android:background="@drawable/artekom"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/imageView2"
        android:background="@drawable/decoration"
        android:visibility="invisible"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/frameLayout">

        <Button
            android:text="ВОЙТИ ЧЕРЕЗ ТЕЛЕФОН"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:id="@+id/using_phone"
            android:background="@color/deep_blue"
            android:textColor="@color/dgts__text_light"/>

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="─────────ИЛИ─────────"
        android:id="@+id/textView2"
        android:textColor="@color/background_floating_material_dark"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/frameLayout"
        android:layout_alignStart="@+id/frameLayout"
        android:layout_alignEnd="@+id/frameLayout"
        android:gravity="center_horizontal"/>

</RelativeLayout>
